{
  "scripts": {
    "start": {
      "desc": "Run script.",
      "cmd": "deno run --allow-read --allow-env=LOCALAPPDATA --allow-net=api.github.com src/main.ts"
    },
    "build": {
      "desc": "Build executable. (for Windows)",
      "cmd": "deno compile --allow-read --allow-env=LOCALAPPDATA --allow-net=api.github.com --output 'DisruptionLogParser.exe' src/main.ts"
    },
    "test": {
      "desc": "Run tests.",
      "cmd": "deno test"
    }
  }
}
